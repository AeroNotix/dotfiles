-- -*- haskell -*-
Config { font = "-*-Fixed-Bold-R-Normal-*-20-*-*-*-*-*-*-*"
       , bgColor = "#1d1d1d"
       , fgColor = "grey"
       , position = Top
       , border = BottomB
       , borderColor = "#646464"
       , lowerOnStart = True
       , allDesktops = True
       , commands = [ Run Cpu ["-L","3","-H","50","--normal","green","--high","red"] 10
                    , Run Memory ["-t","Mem: <usedratio>%"] 10
                    , Run Date "%a %b %_d %Y %H:%M:%S" "date" 10
                    , Run CoreTemp ["-t","<core0>C",
                                    "-L","40","-H","60",
                                    "-l","lightblue",
                                    "-n","gray90","-h","red"] 50
                    , Run DynNetwork [] 10
                    ]
       , sepChar = "%"
       , alignSep = "}{"
       , template = "%cpu% | %memory% | %coretemp% }{ %dynnetwork% | <fc=#ee9a00>%date%</fc>"
      }
