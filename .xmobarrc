Config { font = "-*-Fixed-Bold-R-Normal-*-13-*-*-*-*-*-*-*"
       , bgColor = "black"
       , fgColor = "grey"
       , position = Top
       , lowerOnStart = True
       , commands = [ Run Weather "EPKK" ["-t","<station>: <tempC>C","-L","18","-H","25","--normal","green","--high","red","--low","lightblue"] 36000
                    , Run Cpu ["-L","3","-H","50","--normal","green","--high","red"] 10
                    , Run Memory ["-t","Mem: <usedratio>%"] 10
                    , Run Date "%a %b %_d %Y %H:%M:%S" "date" 10
                    , Run Mail [("inbox", "~/.mail/INBOX")] "mail"
                    , Run MBox [("", "~/.mail/INBOX", "")] [] "mbox"
                    , Run CoreTemp ["-t","<core0>C",
                                    "-L","40","-H","60",
                                    "-l","lightblue",
                                    "-n","gray90","-h","red"] 50
                    , Run BatteryP ["BAT1"] ["-t", "<left>% | <timeleft>",
                                             "-L", "10", "-H", "80", "-p", "3",
                                             "--", "-O", "<fc=green>On</fc> - ", "-i", "",
                                             "-L", "-15", "-H", "-5",
                                             "-l", "red", "-m", "blue", "-h", "green"]
                      600
                    ]
       , sepChar = "%"
       , alignSep = "}{"
       , template = "%cpu% | %memory% | %coretemp% }{ %mail% %mbox% %battery% %EPKK% | <fc=#ee9a00>%date%</fc>"
       }
