-- -*- haskell -*-
Config { font = "-*-Fixed-Bold-R-Normal-*-12-*-*-*-*-*-*-*"
       , bgColor = "#1d1d1d"
       , fgColor = "grey"
       , position = Top
       , border = BottomB
       , borderColor = "#646464"
       , lowerOnStart = True
       , allDesktops = True
       , commands = [ Run CoreTemp  [ "--template" , "  <core0>°C/<core1>°C/<core2>°C/<core3>°C/<core4>°C/<core5>°C/<core6>°C/<core7>°C/<core8>°C/<core9>°C/<core10>°C/<core11>°C/<core12>°C/<core13>°C/<core14>°C/<core15>°C/<core16>°C/<core17>°C/<core18>°C/<core19>°C"
                                    , "--Low"      , "40"        -- units: °C
                                    , "--High"     , "50"        -- units: °C
                                    , "--low"      , "white"
                                    , "--normal"   , "yellow"
                                    , "--high"     , "red"
                                    ] 500
                    , Run Memory ["-t","Mem: <usedratio>%"] 10
                    , Run Date "%a %b %_d %Y %H:%M:%S" "date" 10
                    ]
       , sepChar = "%"
       , alignSep = "}{"
       , template = "%coretemp% | %memory% }{<fc=#ee9a00>%date%</fc> "
      }
