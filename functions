# -*- mode: sh -*-
function syu {
    sudo pacman -Syu --ignore erlang,elasticsearch,rebar
}
function rekon {
    curl -s -L rekon.basho.com | sh
}
function cwd2paths {
    export PYTHONPATH=$PYTHONPATH:$(pwd)
}
function collapse_pwd {
    echo $(pwd | sed -e "s,^$HOME,~,")
}
__ALL_DATABASES=(cassandra riak elasticsearch postgresql kairosdb)
function engage_tyranny {
    for db in $__ALL_DATABASES
    do
        sudo systemctl start $db
    done
}
function disengage_tyranny {
    for db in $__ALL_DATABASES
    do
        sudo systemctl stop $db
    done
}
